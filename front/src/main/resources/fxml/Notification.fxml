<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unicauca.front.controller.NotificationController"
            prefHeight="500.0" prefWidth="400.0"
            style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">

    <VBox spacing="10" style="-fx-padding: 15;">
        <!-- Header -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Notificaciones" style="-fx-font-weight: bold; -fx-font-size: 18;">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </HBox>

        <!-- Contador y botones -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="No leÃ­das:" style="-fx-font-size: 12;"/>
            <Label fx:id="lblUnreadCount" text="0" style="-fx-font-weight: bold; -fx-text-fill: #dc3545; -fx-font-size: 12;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button fx:id="btnRefresh" text="Actualizar" onAction="#onRefresh" 
                    style="-fx-background-color: transparent; -fx-border-color: #ccc; -fx-border-radius: 3; -fx-padding: 3 8; -fx-font-size: 11;"/>
            <Button fx:id="btnMarkAllRead" text="Marcar Todas" onAction="#onMarkAllRead" 
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 3 8; -fx-font-size: 11;"/>
            <Button fx:id="btnClearAll" text="Limpiar" onAction="#onClearAll" 
                    style="-fx-background-color: transparent; -fx-border-color: #ccc; -fx-border-radius: 3; -fx-padding: 3 8; -fx-font-size: 11;"/>
        </HBox>

        <!-- Lista de notificaciones -->
        <ScrollPane fitToWidth="true" prefHeight="400.0">
            <ListView fx:id="listViewNotifications" prefWidth="370.0" prefHeight="400.0"/>
        </ScrollPane>

        <!-- Mensaje cuando no hay notificaciones -->
        <Label fx:id="lblEmpty" text="No hay notificaciones" 
               style="-fx-text-fill: #6c757d; -fx-alignment: center; -fx-padding: 20;"
               visible="false"/>
    </VBox>
</AnchorPane>